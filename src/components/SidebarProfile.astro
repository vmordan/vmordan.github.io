  display: flex;
  align-items: center;
  justify-content: center;

  margin: 0 auto 14px;        /* center + space below */
  width: 256px;
  max-width: 100%;
  aspect-ratio: 1 / 1;        /* guarantees square */

  border-radius: 20px;
  border: 1px solid var(--border);
  background: var(--soft);
  box-shadow: var(--shadow);
  overflow: hidden;
  
}

/* Image itself */
.avatar__img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Tablet / small desktop */
@media (max-width: 900px) {
  .avatar {
    width: 200px;
    margin-bottom: 12px;
  }
}

