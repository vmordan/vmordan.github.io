    margin: 6px 0 0;
    font-size: 13px;
    color: var(--muted);
    line-height: 1.35;
  }

  .side-hero__dot {
    margin: 0 6px;
    opacity: 0.5;
  }

  .side-hero__meta {
    color: #64748b;
  }

  .side-hero__intro {
    margin: 10px 0 0;
    font-size: 13px;
    line-height: 1.45;
    color: #334155;
  }

