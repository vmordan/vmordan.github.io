    margin-top: 10px;
    gap: 6px;
  }

  .chip--compact {
    padding: 6px 9px;
    font-size: 11px;
  }

  @media (max-width: 420px) {
    .side-hero {
      grid-template-columns: 1fr;
    }
    .avatar {
      width: 64px;
      height: 64px;
    }
  }
</style>
